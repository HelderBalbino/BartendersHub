# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bartendershub
MONGODB_URI_PRODUCTION=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/bartendershub

# JWT Configuration
# SECURITY WARNING: Use a strong, random 32+ character secret in production
JWT_SECRET=CHANGE_ME_TO_A_STRONG_32+_CHAR_SECRET
JWT_EXPIRE=7d

# Email Configuration (for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=<your-email>
EMAIL_PASSWORD=<your-app-password>

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=<your-cloudinary-cloud>
CLOUDINARY_API_KEY=<your-cloudinary-api-key>
CLOUDINARY_API_SECRET=<your-cloudinary-api-secret>

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PRODUCTION=https://your-domain.com

# Comma separated list of additional allowed CORS origins (optional)
# Example: CORS_ORIGINS=https://bartendershub.com,https://app.bartendershub.com
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# File Upload Configuration
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads/
MONGODB_URI_TEST=mongodb://localhost:27017/bartendershub_test
USE_IN_MEMORY_DB=true
