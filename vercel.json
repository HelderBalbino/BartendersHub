{
	"version": 2,
	"functions": {
		"backend/src/server.js": {
			"runtime": "@vercel/node"
		}
	},
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/backend/src/server.js"
		},
		{
			"src": "/(.*)",
			"dest": "/index.html"
		}
	],
	"env": {
		"NODE_ENV": "production"
	}
}
